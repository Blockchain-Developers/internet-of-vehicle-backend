doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
  title Internet of Vehicles PoC
  link(rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Advent+Pro')
  link(rel='stylesheet' href='/assets/css/styles.css')
.container(style='margin-top: 30px;')
  h1.text-center Internet of Vehicles PoC
  h4.text-center(style='margin-top: -10px;') Create Case
body(style="font-family: 'Advent Pro', sans-serif;")
  form(action='/case/create' method='post' enctype='application/json')
    .container(style='max-height: 420px;width: 60%;')
      label Case Name
      .input-group
        input.form-control(name='caseName' type='text' style='width: 100%;margin-top: -10px;padding-bottom: 2px;padding-top: 2px;' placeholder='Enter Case Name')
        .input-group-prepend
        .input-group-append
      label(style='margin-top: 20px;') Private for
      select.form-control.selectpicker(name='privateFor')
        each val, index in orgList
          option(value=val) #{val}
      br
      label(style='margin-top: 20px;') Case Description
      textarea.form-control(name='description' placeholder='Enter Description Here' rows='5')
    .container.text-center(style='max-height: 420px;width: 60%;margin-top: 10px;')
      button.btn.btn-light.border.rounded-0(type='submit' style='background-color: #999999;margin-right: 10px;width: 100px;color: rgb(255,255,255);') Confirm
      a.btn.btn-light.border.rounded-0(href='/case' style='background-color: #efefef;width: 100px;') Cancel
script(src='/assets/js/jquery.min.js')
script(src='/assets/bootstrap/js/bootstrap.min.js')

